{
	"name": "maximizedterminal",
	"displayName": "Maximized Terminal",
	"description": "Adds a key binding (ctrl+;) for toggling between maximized terminal and closed panel :)",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"maximize",
		"maximized",
		"terminal",
		"maximizedterminal",
		"fullscreen",
		"enlarge",
		"enlarged",
		"keybind",
		"key",
		"bind",
		"binding"
	],
	"license": "MIT",
	"publisher": "samueltscott",
	"repository": {
		"type": "git",
		"url": "https://github.com/Nytra/MaximizedTerminal.git"
	},
	"activationEvents": [
		"onCommand:maximizedterminal.maxTerm",
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "MaximizedTerminal"
		},
		"commands": [
			{
				"command": "maximizedterminal.maxTerm",
				"title": "Maximize Terminal"
			}
		],
		"keybindings": [
			{
				"key": "ctrl+;",      
				"command": "maximizedterminal.maxTerm",            
				"when": "!activePanel"
			},
			{
				"key": "ctrl+;",
				"command": "workbench.action.closePanel",            
				"when": "activePanel || terminalFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
