{
	"name": "maximizeterminal",
	"displayName": "Maximize Terminal",
	"description": "Adds keybindings for opening and closing a maximized terminal :)",
	"version": "2.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"maximize",
		"maximized",
		"maximise",
		"terminal",
		"maximizeterminal",
		"fullscreen",
		"enlarge",
		"enlarged",
		"keybind",
		"key",
		"bind",
		"binding"
	],
	"license": "MIT",
	"publisher": "samueltscott",
	"icon": "icon.png",
	"galleryBanner": {
		"color": "#cc3399",
		"theme": "dark"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Nytra/MaximizedTerminal.git"
	},
	"activationEvents": [
		"onCommand:maximizeterminal.maxTerm",
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "MaximizeTerminal",
			"properties": {
				"maximizeterminal.useAlternativeKeybinding": {
					"type": "boolean",
					"default": false,
					"description": "Use ctrl+; to invoke the extension. This will give ctrl+' back its default behaviour of opening the terminal in a non-maximized state."
				}
			}
		},
		"commands": [
			{
				"command": "maximizeterminal.maxTerm",
				"title": "Maximize Terminal"
			}
		],
		"keybindings": [
			{
				"key": "ctrl+;",
				"command": "maximizeterminal.maxTerm",
				"when": "config.maximizeterminal.useAlternativeKeybinding && !activePanel"
			},
			{
				"key": "ctrl+;",
				"command": "workbench.action.closePanel",
				"when": "config.maximizeterminal.useAlternativeKeybinding && activePanel || terminalFocus"
			},
			{
				"key": "ctrl+oem_3",
				"command": "maximizeterminal.maxTerm",
				"when": "!config.maximizeterminal.useAlternativeKeybinding && !activePanel"
			},
			{
				"key": "ctrl+oem_3",
				"command": "workbench.action.closePanel",
				"when": "!config.maximizeterminal.useAlternativeKeybinding && activePanel || terminalFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.14",
		"@types/vscode": "^1.47.0",
		"@typescript-eslint/eslint-plugin": "^2.34.0",
		"@typescript-eslint/parser": "^2.34.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.2.0",
		"typescript": "^3.9.7",
		"vscode-test": "^1.4.0"
	}
}
